
{{!< default}}

<section class="max-w-3xl mx-4 my-4 md:mx-auto">

    <h1 class="mt-12 text-4xl font-bold">{{statusCode}}</h1>
    <p class="text-2xl">{{message}}</p>

    {{#if errorDetails}}
        <section class="my-4">
            <h4 class="mb-3 text-2xl font-bold">Theme errors:</h4>
            <ul class="">
                {{#foreach errorDetails}}
                    <li class="mb-2">
                        <h5 class="">{{{rule}}}</h5>

                        {{#foreach failures}}
                            <span class=""><strong>Ref:</strong> {{ref}}</span><br>
                            <span class=""><strong>Message:</strong> {{message}}</span>
                        {{/foreach}}
                    </li>
                {{/foreach}}
            </ul>
        </section>
    {{/if}}

</section>
