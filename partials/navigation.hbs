<ul id="navigation" class="hidden py-2 text-lg text-center font-extralight sm:block sm:ml-auto sm:my-auto sm:px-2">
    {{#foreach navigation}}
        <li class="my-1 sm:pt-0 sm:px-2 sm:inline-block nav-{{slug}}">
            <a class="py-2 {{#if current}}text-dyari-gray-lightest hover:text-dyari-gray-lightest{{/if}} {{#unless current}}text-dyari-gray-light hover:text-dyari-gray-very-light{{/unless}}" href="{{url absolute="true"}}">
                {{label}}
            </a>
        </li>
    {{/foreach}}
</ul>
